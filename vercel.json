{
  "version": 2,
  "builds": [
    {
      "src": "./src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "https://simulador-financiero-backend.vercel.app",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
}